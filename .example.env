APP_URL="http://localhost:3000"
STORAGE_KEY=
DB_HOST="voidauth-db"
DB_PASSWORD=

# Initial admin password (optional, min 8 characters)
# If not set, a random 32-character password will be generated and logged
# Recommended: Set this to a strong password and avoid sharing it
ADMIN_INITIAL_PASSWORD=

# Login brute force protection (memory-based, resets on docker restart)
# Maximum failed login attempts before blocking
LOGIN_MAX_ATTEMPTS=10
# Block duration in minutes after max failed attempts
LOGIN_BLOCK_DURATION=15